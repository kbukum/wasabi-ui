{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "src"
  ],
  "filesGlob": [
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
