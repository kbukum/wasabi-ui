{
  "compilerOptions": {
    "baseUrl": "./wasabi-ui",
    "rootDirs": ["./wasabi-ui"],
    "outDir": "./lib",
    "target": "es5",
    "paths": {
        "wasabi-ui/*" : "../wasabi-ui/*"
    },
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "./wasabi-ui",
    "*\\.scss"
  ],
  "filesGlob": [
    "./typings/**/*.d.ts"
  ],
  "exclude": [
    "./node_modules",
    "./**/*.spec.ts",
    "./**/*.spec.tsx"
  ]
}
